<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                   assembly="Api.Data" 
                   namespace="Api.Data.Entities">

    <class name="User" table="users">

        <id name="Id" column="id" type="long">
            <generator class="identity"/>
        </id>

        <property name="Name" column="name" not-null="true" length="64"/>
        <property name="Surname" column="surname" not-null="true" length="64"/>
        <property name="Email" column="email" unique="true" not-null="true" length="64"/>
        <property name="Password" column="password" not-null="true" length="255"/>
        <property name="PhoneNumber" column="phone_number" not-null="true" length="16"/>

        <property name="birthDate" column="birth_date" type="DateOnlyType"> 
            <column name="BirthDate" sql-type="date" not-null="false" />
        </property>

    </class>

</hibernate-mapping>